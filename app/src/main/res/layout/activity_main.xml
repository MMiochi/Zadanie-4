<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5DC">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A52A2A"
        android:text="Gra w kości. Autor: Seweryn Marciniak"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/ThrowDices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2691E"
        android:text="Rzuć Koścmi"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Dice1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/Dice2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/Dice3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/Dice4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/Dice5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ScoreCurrentThrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Wynik tego losowania : 0"/>

    <TextView
        android:id="@+id/GameScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Wynik Gry: 0"/>

    <TextView
        android:id="@+id/ThrowCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Liczba rzutów: 0"/>

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D2691E"
        android:text="Reset wyniku"
        android:textSize="20dp"/>


</LinearLayout>
